<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title></title>
  <script type="text/javascript">
    function show() {
      document.querySelectorAll(".reveal").forEach(function(element) {
        element.style.display = "block";
      })
      document.querySelector(".hide").style.display = "none";
    }
  </script>
</head>

<body>
  <style>
    input[type="text"]  {
      width: 300px;
    }
  </style>

  <div class="cardCreate">
    <form class="cardCreator" action="/createCard" method="post">
      <legend>New Pokemon</legend>
      <label for="newName">Name: </label><input type="text" name="newName" placeholder="What's the Pokemon's name?" value=""><br>
      <label for="newSetID">Set ID: </label><input type="text" name="newSetID" placeholder="What's the set ID?" value=""><br>
      <label for="newNumber">Card Number: </label><input type="text" name="newNumber" placeholder="What's the card number?" value=""><br>
      <label for="newOwned">Number owned:</label><input type="text" name="newOwned" placeholder="How many do you own?" value=""><br>
      <label for="newMove">Move 1: </label><input type="text" name="newMove" placeholder="What's move one?" value=""><br>
      <label for="newMoveType">Type:  </label><input type="text" name="newMoveType" placeholder="What type of move is it?" value=""><br>
      <label for="newMoveNum">Energy count: </label><input type="text" name="newMoveNum" placeholder="How much energy does it take?" value=""><br>
      <label for="newMoveText">Move text: </label><input type="text" name="newMoveText" placeholder="What does the move do?" value=""><br>
      <label for="newDamage">Damage: </label><input type="text" name="newDamage" placeholder="How much damage does it do?" value=""><br>

      <button type="submit" name="submitNew">Create that Pokemon!</button>
    </form>
  </div>


  <div class="mainStore">
    {{#pokemonCard}}
    <div class="pokeBox">
    Name:  {{name}}<br>
    Set ID:  {{setID}}<br>
    Card Number:  {{cardNumber}}<br>
    Number Owned: {{numberOwned}}<br><form class="ownedUpdate" action="/ownedUpdate/{{name}}" method="post">
      <input type="text" class="reveal" name="updateText" style="display:none" value=""><button type="submit" class="reveal" style="display:none" name="updateButton">Update!</button><button type="button" class="hide" onclick="show()" style="display:block" name="updateButton2">Update?</button>
    </form>
    {{#moveList}}
    Move Name:  {{moveName}}<br>
    {{#energyCost}}
    Move Type:  {{energyType}}<br>
    Energy Count:  {{energyCount}}<br>
    {{/energyCost}}
    Move Text:  {{moveText}}<br>
    Damage:  {{damage}}<br>
    {{/moveList}}
    <form class="deletePoke" action="/delete/{{name}}" method="post">
      <button type="submit" name="button">Delete Pokemon</button>
    </form>
<hr>
    </div>
{{/pokemonCard}}
  </div>

</body>

</html>
